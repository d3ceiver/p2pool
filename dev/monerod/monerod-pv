apiVersion: apps/v1
kind: Deployment
metadata:
  name: pv-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: pv-app
  template:
    metadata:
      labels:
        app: pv-app
    spec:
      containers:
      - name: app-container
        image: nginx:latest  # Use any image you prefer
        volumeMounts:
        - name: data-volume
          mountPath: /app/data  # Mount point in the container
      volumes:
      - name: data-volume
        persistentVolumeClaim:
          claimName: slave3-volume  # Name of the PVC associated with the PV
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: slave3-volume
spec:
  capacity:
    storage: 4Gi
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: monero-pv-new
  hostPath:
    path: /home/worker3/
    type: Directory
