apiVersion: apps/v1
kind: Deployment
metadata:
  name: pvc-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: pvc-app
  template:
    metadata:
      labels:
        app: pvc-app
    spec:
      containers:
      - name: app-container
        image: nginx:latest  # Use any image you prefer
      volumes:
      - name: data-volume
        persistentVolumeClaim:
          claimName: slave3-volume  # Name of the PVC
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: slave3-volume
  namespace: p2pool
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 4Gi
  storageClassName: monero-pv-new
